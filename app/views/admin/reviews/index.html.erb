<div class="small-centered column fill-form">
  <h3> All Reviews </h3>
  <%= paginate @reviews %>
  <table class="responsive centered">
    <tr>
      <th>User</th>
      <th>Restaurant Reviewed</th>
      <th>Review (optional)</th>
    </tr>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.user.username %></td>
        <td><%= review.restaurant.name %></td>
        <td><%= review.body %></td>
        <td>
          <%= button_to "Delete", admin_review_path(review),
            method: :delete, class: "button small round", data: {confirm: "Are you sure you want to delete
            this review?"} %>
        </td>
      </tr>
    <% end %>
  </table>
</div>
