<div class="row">
  <div class="small-4 small-centered column fill-form"><h3>All Users</h3>
    <div class="small-centered column fill-form">
      <table>
        <tr>
          <th>Username</th>
          <th>Email</th>
        </tr>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.username %></td>
            <td><%= user.email %></td>
            <td>
              <%= button_to "Delete", admin_user_path(user), method: :delete, class: "button tiny round", data:
              {confirm: "Are you sure you want to delete #{user.username}?"} %>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
    <%= paginate @users %>
  </div>
</div>
