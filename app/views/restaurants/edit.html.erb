<div class="row">
  <div class="large-10 large-offset-1 fill-form">
    <h1>Edit Restaurant</h1>

    <%= form_for @restaurant do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :address %>
    <%= f.text_field :address %>
    <%= f.label :city %>
    <%= f.text_field :city %>
    <%= f.label :state %>
    <%= f.text_field :state %>
    <%= f.label :zip_code %>
    <%= f.text_field :zip_code %>
    <%= f.submit "Submit Changes" %>
    <%- end -%>

    <%= button_to "Delete Restaurant", @restaurant, method: :delete, class: "button tiny round" , data:
    {confirm: "Are you sure you want to delete your restaurant?"}%>
  </div>
</div>
