<h3> All Reviews </h3>
<%= paginate @reviews %>
<table>
  <tr>
    <th>User</th>
    <th>Restaurant Reviewed</th>
    <th>Review (if provided)</th>
  </tr>
  <% @reviews.each do |review| %>
    <tr>
      <td><%= review.user %></td>
      <td><%= review.restaurant %></td>
      <td><%= review.body %></td>
      <td>
        <%= button_to "Delete", admin_review_path(review),
          method: :delete, data: {confirm: "Are you sure you want to delete
          this review?"} %>
      </td>
    </tr>
  <% end %>
</table>
